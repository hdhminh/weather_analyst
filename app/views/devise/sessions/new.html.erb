<div class="wrapper-login" id="login-form">
    <button class="close-btn" onclick="var loginForm = document.getElementById('login-form'); 
        loginForm.classList.remove('show');">
        <i class='bx bx-x'></i>
    </button>

    <div class="form-box">
        <h1> Sign In </h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-box">
            <%= f.text_field :login, placeholder: "Username", class: "input", autocomplete: "off"  %>
            <i class='bx bxs-user'></i>
        </div>

        <div class="input-box">
            <%= f.password_field :password, placeholder: "Password", class: "input", autocomplete: "new-password"  %>
            <i class='bx bxs-lock-alt'></i>
        </div>

        <div class="remember-forgot">
            <% if devise_mapping.rememberable? %>
            <div class="field">
                <%= f.check_box :remember_me, class: "input", style: "display: inline-block;" %>
                <%= f.label :remember_me %>

                <%= link_to "Forgot password?", new_password_path(resource_name), class: "a", style: "margin-left: 120px" %>
            </div>
            <% end %>
        </div>

        <div class="actions">
            <%= f.submit "Login", class: "btn"%>
        </div>

        <div class="register-link">
            <p>Don't have an account? <%= link_to "Register", new_registration_path(resource_name), class: "a" %></p>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>