<div class="wrapper-register">
    <div class="form-box">
        <h1>Sign Up</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="input-box">
            <%= f.text_field :username, autofocus: true, required: true,  placeholder: "Username", class: "input", autocomplete: "off" %>
            <i class='bx bxs-user'></i>
        </div>

        <div class="input-box">
            <%= f.text_field :email, autofocus: true, required: true,  placeholder: "Email", class: "input", autocomplete: "off" %>
            <i class='bx bx-envelope'></i>
        </div>

        <div class="input-box">
            <%= f.password_field :password, required: true, placeholder: "Password (#{@minimum_password_length || 6} characters minimum)", class: "input", autocomplete: "new-password" %>
            <i class='bx bxs-lock-alt'></i>
        </div>

        <div class="input-box">
            <%= f.password_field :password_confirmation, required: true, placeholder: "Password Confirm", class: "input", autocomplete: "new-password" %>
            <i class='bx bx-check-shield'></i>
        </div>

        <div class="actions">
            <%= f.submit "Register", class: "btn" %>
        </div>

        <div class="register-link">
            <p>Already have an account? <%= link_to "Login", new_session_path(resource_name), class: "a" %></p>
        </div>

        <% end %>
    </div>
</div>